<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".WordBook">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center"> <!-- 수평, 수직 중앙 배치 -->

        <!-- 타이틀 : 단어장 -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어장"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>


    <!-- 영단어 -->
    <TextView
        android:id="@+id/showWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apple"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="32dp" />

    <!-- 단어의 의미 -->
    <TextView
        android:id="@+id/showMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A round fruit with red or green skin and a whitish interior."
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- 단어 예제 -->
    <TextView
        android:id="@+id/showExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="She ate an apple for breakfast."
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- 해석 -->
    <TextView
        android:id="@+id/showTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사과"
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginTop="16dp" />



    <!-- 버튼들을 수평으로 배치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <!-- 좌 버튼 -->
        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◀"
            android:textSize="20sp"
            android:layout_marginEnd="16dp" />

        <!-- 우 버튼 -->
        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- 영단어 -->
    <TextView
        android:id="@+id/showNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Page"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="32dp" />


</LinearLayout>
