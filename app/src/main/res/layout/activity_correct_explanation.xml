<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <!-- 첫 번째 설명 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/explanationWord1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="단어 1: 예시 단어"
            android:textColor="#000" />
        <!-- 정답/오답 표시용 TextView 추가 -->
        <TextView
            android:id="@+id/explanationAnswerStatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답"
            android:textSize="16sp"
            android:textColor="#008000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/explanationMeaning1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="의미 1: 예시 의미"
            android:textColor="#000" />

        <TextView
            android:id="@+id/explanationExample1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="예시 1: 예시 예제"
            android:textColor="#000" />
    </LinearLayout>

    <!-- 두 번째 설명 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/explanationWord2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="단어 2: 예시 단어"
            android:textColor="#000" />
        <!-- 정답/오답 표시용 TextView 추가 -->
        <TextView
            android:id="@+id/explanationAnswerStatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답"
            android:textSize="16sp"
            android:textColor="#008000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/explanationMeaning2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="의미 2: 예시 의미"
            android:textColor="#000" />

        <TextView
            android:id="@+id/explanationExample2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="예시 2: 예시 예제"
            android:textColor="#000" />
    </LinearLayout>

    <!-- 세 번째 설명 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3."
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/explanationWord3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="단어 3: 예시 단어"
            android:textColor="#000" />
        <!-- 정답/오답 표시용 TextView 추가 -->
        <TextView
            android:id="@+id/explanationAnswerStatus3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답"
            android:textSize="16sp"
            android:textColor="#008000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/explanationMeaning3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="의미 3: 예시 의미"
            android:textColor="#000" />

        <TextView
            android:id="@+id/explanationExample3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="예시 3: 예시 예제"
            android:textColor="#000" />
    </LinearLayout>

    <!-- 네 번째 설명 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4."
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/explanationWord4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="단어 4: 예시 단어"
            android:textColor="#000" />
        <!-- 정답/오답 표시용 TextView 추가 -->
        <TextView
            android:id="@+id/explanationAnswerStatus4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답"
            android:textSize="16sp"
            android:textColor="#008000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/explanationMeaning4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="의미 4: 예시 의미"
            android:textColor="#000" />

        <TextView
            android:id="@+id/explanationExample4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:text="예시 4: 예시 예제"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/myAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="내가 고른 번호 : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:text="옳은 번호 : "
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재도전"
            android:layout_marginEnd="20dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/moveMainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메인 메뉴로"
            android:visibility="gone" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
