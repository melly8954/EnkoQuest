<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MyPageActivity">

    <Button
        android:id="@+id/btnLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:text="챌린지 레벨"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNick" />
    <Button
        android:id="@+id/buttonNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="나만의 단어장"
        app:layout_constraintEnd_toStartOf="@+id/btnLevel"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLevel" />


    <Button
        android:id="@+id/buttonMoveChangePW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패스워드 변경하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSelfProduce"
        app:layout_constraintVertical_bias="0.586" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfilImg"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="88dp"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/black"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textId"
        android:layout_width="136dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:text="ID"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewProfilImg"
        app:layout_constraintStart_toStartOf="@+id/imageViewProfilImg"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfilImg" />

    <TextView
        android:id="@+id/textNick"
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="Nickname"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textId"
        app:layout_constraintStart_toStartOf="@+id/textId"
        app:layout_constraintTop_toBottomOf="@+id/textId" />


    <EditText
        android:id="@+id/editTextSelfProduce"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:hint="한줄 소개"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="한줄 소개"
        app:layout_constraintStart_toStartOf="@+id/editTextSelfProduce"
        app:layout_constraintTop_toBottomOf="@+id/buttonNote" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="@+id/editTextSelfProduce"
        app:layout_constraintTop_toBottomOf="@+id/editTextSelfProduce" />

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>
