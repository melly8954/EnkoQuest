<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/back" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="나만의 단어장"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <!-- 단어 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <!-- 영단어 -->
        <TextView
            android:id="@+id/showWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="apple"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- 의미 -->
        <TextView
            android:id="@+id/showMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="A round fruit with red or green skin and a whitish interior."
            android:textColor="#555555"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 예제 -->
        <TextView
            android:id="@+id/showExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="She ate an apple for breakfast."
            android:textColor="#555555"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 예제 해석 -->
        <TextView
            android:id="@+id/showTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="사과"
            android:textColor="#555555"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 이전 페이지 버튼 -->
        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◀"
            android:textSize="20sp" />

        <!-- 현재 페이지 표시 -->
        <TextView
            android:id="@+id/showNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="1 Page"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- 다음 페이지 버튼 -->
        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶"
            android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="암기 완료"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

</LinearLayout>
