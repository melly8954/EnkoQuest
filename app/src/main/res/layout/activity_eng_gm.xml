<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FFF4"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/englishGameSection"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:background="#C6E0B4"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="56dp"
            android:layout_height="53dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back Button"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/challengeMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A8D08D"
            android:padding="16dp"
            android:text="챌린지 게임 모드"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <!-- 영어 단어 맞추기 -->
        <TextView
            android:id="@+id/wordMatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:background="#E2EFDA"
            android:padding="8dp"
            android:text="영어 단어 맞추기"
            android:textSize="32sp" />

        <!-- 빈칸 채우기 -->
        <TextView
            android:id="@+id/fillInTheBlank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#E2EFDA"
            android:padding="8dp"
            android:text="빈칸 채우기"
            android:textSize="32sp" />

        <!-- 동의어 찾기 -->
        <TextView
            android:id="@+id/synonymFinder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2EFDA"
            android:padding="8dp"
            android:text="동의어 찾기"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>
