            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="예시 3: 예시 예제"
            android:textColor="#000" />
    </LinearLayout>

    <!-- 네 번째 선택지 설명 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">
